<UserControl x:Class="ChartsWidget.ChartWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChartsWidget"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
            <Grid>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="ChartCanvas" MinWidth="400" MinHeight="300" Background="White"/>
                </ScrollViewer>
                <TextBlock x:Name="ErrorTextBlock" 
                           Text="Enter only numbers, space separated (e.g. 10 50 30 80)"
                           Foreground="Gray"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="20"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
